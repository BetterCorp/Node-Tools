{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["es5", "dom"],
    "declaration": true,
    "strictNullChecks": false
  },
  "compileOnSave": true,
  "include": ["src", "../lite/src"],
  "exclude": ["node_modules/**"]
}
